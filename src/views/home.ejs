<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <ul>
        <li><a href="/">Trang chủ</a></li>
        <li><a href="/create-user">Tạo người dùng</a></li>
    </ul>

    <div class="container">
        <h1>Danh sách người dùng</h1>
        <table>
            <tbody>
                <tr class="table-title">
                    <td>ID</td>
                    <td>Email</td>
                    <td>Name</td>
                    <td>City</td>
                    <td>Action</td>
                </tr>

                <% listUser.forEach((user)=> { %>
                    <tr>
                        <td>
                            <%=user.id %>
                        </td>
                        <td>
                            <%=user.email %>
                        </td>
                        <td>
                            <%=user.name %>
                        </td>
                        <td>
                            <%=user.city %>
                        </td>
                        <td>
                            <a href="/update-user/<%=user.id %>" class="update-link">Edit</a>
                            <a href="/delete-user/<%=user.id %>" class="update-link">Delete</a>
                        </td>
                    </tr>
                    <% } )%>
            </tbody>
        </table>
    </div>
</body>

</html>